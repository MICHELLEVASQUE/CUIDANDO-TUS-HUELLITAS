               AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
               AbsoluteLayout.LayoutBounds="0.,1,0.7,AutoSize"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Aspect="AspectFit"
           WidthRequest="200"/>-->
    </AbsoluteLayout>
</ContentPage>