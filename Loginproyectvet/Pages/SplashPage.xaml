<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loginproyectvet.Pages.SplashPage"
             Title="SplashPage">
    <AbsoluteLayout BackgroundColor="White">

        <!-- Imagen centrada en la pantalla (puedes usar tu logo o imagen de presentación) -->
        <Image Source="imageiniciar.jpg"
               WidthRequest="900"
               HeightRequest="800"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5,0.5,AutoSize,AutoSize"
               Aspect="AspectFit"
               Margin="10"/>

        <!-- Mensaje de presentación opcional -->
        <Label Text="𝑩𝒊𝒆𝒏𝒗𝒆𝒏𝒊𝒅𝒐 𝒂 𝒍𝒂 𝑨𝒑𝒑"
               
               FontSize="40"
               TextColor="Black"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5,0.,AutoSize,AutoSize"
               HorizontalTextAlignment="Center"/>

        <Button Clicked="Button_Clicked"
                Text="Ingresar"
                FontSize="Title"
                BackgroundColor="Salmon"
                TextColor="Black"
                     AbsoluteLayout.LayoutBounds="0.5,0.95, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional" 
             
                />


    </AbsoluteLayout>
</ContentPage>